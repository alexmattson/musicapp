<% current_id = current_user.id %>

<% notes.each do |note| %>
  <div class="note bs-callout bs-callout-info" id="callout-labels-inline-block">
    <p><%= note.note %></p>
    <h4><%= note.user.email %></h4>
    <% if logged_in? && current_id == note.user_id %>
      <%= button_to "Delete", note_url(note), method: :delete, class: "btn btn-danger", style: "float:right; position:relative; top:-45px;" %>
    <% end %>
  </div>
<% end %>
