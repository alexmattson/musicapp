<form action="<%= @route %>" method="post">
  <% unless @band.id.nil? %>
    <input type="hidden" name="_method" value="patch">
  <% end %>
  <%= auth_token %>

  <label> name:
    <input type="text" name="band[name]" value="<%= @band.name %>">
  </label>

  <% submit_text = @band.id.nil? ? "Add Band" : "Update Band" %>
  <input type="submit" value="<%= submit_text %>">
</form>
