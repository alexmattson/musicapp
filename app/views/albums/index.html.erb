<h1 class="index_header">Albums</h1>
<%= paginate @albums, window: 2 %>

<table class="table" data-sortable>
  <thead>
    <tr>
      <th>Album</th>
      <th>Band</th>
      <th>Year</th>
    </tr>
</thead>
<tbody>
  <% @albums.each do |album| %>
    <tr>
      <td><%=link_to album.title, album_url(album) %></td>
      <td><%=link_to album.band.name, band_url(album.band_id) %></td>
      <td><%= album.year %></td>
    </tr>
  <% end %>
</tbody>
</table>
